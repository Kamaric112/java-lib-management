<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.MenuController"
      styleClass="main-container">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Main Menu" styleClass="title-label"/>
    
    <Button fx:id="bookListButton" text="Book List" onAction="#switchToBookList" 
            styleClass="menu-button"/>
    <Button fx:id="signInButton" text="Sign In" onAction="#switchToSignIn" 
            styleClass="menu-button"/>
    <Button fx:id="registerButton" text="Register" onAction="#switchToRegister" 
        styleClass="menu-button"/>
    <Button fx:id="exitButton" text="Exit" onAction="#exitApplication" 
            styleClass="exit-button"/>
    
    <stylesheets>
        <URL value="@menu.css" />
    </stylesheets>
</VBox>